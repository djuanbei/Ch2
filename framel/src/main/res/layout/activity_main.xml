<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.framel.MainActivity">

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/view2"
            android:layout_width="180pt"
            android:layout_height="180pt"
            android:layout_gravity="center"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/view3"
            android:layout_width="160pt"
            android:layout_height="160pt"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/view4"
            android:layout_width="140pt"
            android:layout_height="140pt"
            android:layout_gravity="center"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center" />

        <TextView
            android:id="@+id/view5"
            android:layout_width="120pt"
            android:layout_height="120pt"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/view6"
            android:layout_width="100pt"
            android:layout_height="100pt"
            android:layout_gravity="center"
            android:background="@android:color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/view1"
            android:layout_width="200pt"
            android:layout_height="200pt"
            android:layout_gravity="center"
            android:background="@color/colorAccent" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
